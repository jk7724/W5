@model Models.Vocabulary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="SetId" />
    <div class="border">
        <div class="form-group-row mt-3">
            <label class="col-2 ml-2" asp-for="NativeWord">Słówko natywne</label>
            <div class="col-6">
                <input class="form-control" asp-for="NativeWord" type="text" placeholder="Podaj słówko w jezyku natywnym" />
                <span asp-validation-for="NativeWord" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-row">
            <label class="col-2 ml-2" asp-for="LearnWord">Słówko obce</label>
            <div class="col-6">
                <input class="form-control" asp-for="LearnWord" type="text" placeholder="Podaj słówko w języku obcym" />
                <span asp-validation-for="LearnWord" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-row">
            <label class="col-2 ml-2" asp-for="NativeSentence">Zdanie natywne</label>
            <div class="col-6">
                <input class="form-control" asp-for="NativeSentence" type="text" placeholder="Podaj zdanie w jezyku natywnym" />
                <span asp-validation-for="NativeSentence" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group-row  mb-3">
            <label class="col-2 ml-2" asp-for="LearnSentence">Zdanie natywne</label>
            <div class="col-6">
                <input class="form-control" asp-for="LearnSentence" type="text" placeholder="Podaj zdanie w jezyku obcym" />
                <span asp-validation-for="LearnSentence" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
             <button type="submit" class="btn btn-primary form-control">Edit</button>
        </div>
        <div class="col">
             <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
        </div>
     </div>


    
</form>


